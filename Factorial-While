// Factorial-While.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

int main() 
{
	int i, n, factorial, j;
	cout<< " dame el valor de n: ";
	cin>> n;
	factorial=1;
	i=1;
	while (i<=n)
    {
		factorial=factorial*i;
		i++; //i=i+1

	}
	cout<< "el factorial es: ";
	cout<< factorial;
	getch();

}
