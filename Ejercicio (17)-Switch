// Ejercicio (17) restaurante.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()
{
	float costo=0;
	int opcion,cantidad;
	cout<<" ingrese la cantidad: ";
	cin>>cantidad;
	cout<<" seleccione su pedido: ";
	cout<<"\n\t MENU"<<endl;
	cout<<"\n\t ===="<<endl;
	cout<<" 1. Hamburguesa"<<endl;
	cout<<" 2. Hamburguesacon queso"<<endl;
	cout<<" 3. papas"<<endl;
	cout<<" 4. soda"<<endl;
	cout<<" ingrese una opcion: ";
	cin>>opcion;

	switch (opcion)
	{
	case 1: costo=3;
		break;
    case 2: costo=5;
		break;
    case 3: costo=2;
		break;
	case 4: costo=2.5;
		break;
	default: cout<<"opcion invalida: "<<endl;
	}
	cout<< "El costo es: "<<costo*cantidad;
	getch();

}
