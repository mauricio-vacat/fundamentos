// suma de numeros entre 1-n.cpp : Defines the entry point for the console application.
// Mauricio Vaca . ejercicio de suma entre 1-n

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main()
{
	int n, suma=0;

	cout<< "ingrese el valor de n: ";
	cin>> n;
	for(int i=1; i<=n; i++)
	{	
		suma=suma+i;
	}
	cout<< "la suma es: ";
	cout<< suma;
	getch();
}
